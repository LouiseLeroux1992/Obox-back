{% extends 'base.html.twig' %}

{% block title %}Les étiquettes{% endblock %}

{% block body %}
    <h1>Les étiquettes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Identifiant</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.id }}</td>
                <td>{{ tag.name }}</td>
                <td>
                    <a href="{{ path('app_backoffice_tag_show', {'id': tag.id}) }}">Ouvrir</a>
                    <a href="{{ path('app_backoffice_tag_edit', {'id': tag.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
