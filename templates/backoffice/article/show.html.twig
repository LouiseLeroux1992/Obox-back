{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Identifiant</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Résumé</th>
                <td>{{ article.summary }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ article.image }}</td>
            </tr>
            <tr>
                <th>Description de l'image</th>
                <td>{{ article.imageDescription }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_backoffice_article_index') }}">Retour à la liste des articles</a>

    <a href="{{ path('app_backoffice_article_edit', {'id': article.id}) }}">Modifier</a>

    {{ include('backoffice/article/_delete_form.html.twig') }}
{% endblock %}
