<!doctype html>
<html lang="fr">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <!-- Bootstrap icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <!-- Our custom CSS -->
    {# TODO link css #}
    <!-- favicon -->
    <link rel="shortcut icon" href="{{ asset('assets/images/logo_obox.png') }}" type="image/x-icon">

    <title>{% block title %}Back-O'Box{% endblock %}</title>
</head>
<body>
<!-- Nav -->
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #fee3a2">

        <div class="container-fluid">
            <a href="{{ path('app_backoffice_main') }}" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none header-logo">
                <img src="{{ asset('assets/images/logo_obox.png') }}" height="24" alt="Logo O'Box">
                <span class="header-logo__title" style="color: #058240"> Back-O'Box</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
            {% if is_granted("ROLE_ADMIN") %}
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" style="color: #87C159" href="{{ path('app_backoffice_article_index') }}">Articles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" style="color: #87C159" href="{{ path('app_backoffice_theme_index') }}">Thèmes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" style="color: #87C159" href="{{ path('app_backoffice_article_new') }}">Ajouter un article</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" style="color: #87C159" href="{{ path('app_backoffice_theme_new') }}">Ajouter un thème</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" style="color: #87C159" href="{{ path('app_backoffice_reserve_task_index') }}">Tâches en réserve</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" style="color: #87C159" href="{{ path('app_backoffice_tag_index') }}">Etiquettes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" style="color: #87C159" href="{{ path('app_backoffice_reserve_task_new') }}">Ajouter une tâche</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" style="color: #87C159" href="{{ path('app_backoffice_tag_new') }}">Ajouter une étiquette</a>
                    </li>
                </ul>
                {% endif %}
                
                {{ include ('security/_nav.html.twig')}}
            </div>
        </div>
    </nav>


    <div class="container">
        {% block body %}Body par défaut{% endblock %}
    </div>
<!-- footer -->
<footer class="container-fluid py-4 border-top text-center">
    <span class="text-muted" style="color: #87C159">O'Box</span>
    {# TODO : insert links footer #}
</footer>

